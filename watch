#!/bin/sh

NUMAKE=$(readlink -f numake)

${NUMAKE} $@
${NUMAKE} --gc
while :
do
	inotifywait \
		-e close_write \
		`${NUMAKE} --sources` `find . -name '*.nu'` || exit 1
	${NUMAKE} $@ && {
		echo "-------------------------------------"
		valgrind --leak-check=full bin/lip
		echo "-------------------------------------"
	}
done
